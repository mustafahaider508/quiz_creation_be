generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName String?
  surname   String?
  email     String  @unique
  password  String
  address   String?
  image     String?
  phone     String?
  dob       String?
  gender    String?
  quiz      Quiz[]

  @@map("user")
}

model Quiz {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  quizData Json
  user     User?   @relation(fields: [userId], references: [id])
  userId   String?
}
